# Auto-Lead-Finder – Beispielkonfiguration
GOOGLE_API_KEY=YOUR_GOOGLE_PLACES_API_KEY
CITY=Frankfurt am Main
COUNTRY_CODE=DE
KEYWORDS=Bäckerei, Friseur, Klempner
USE_PLACES=true
USE_OVERPASS=false

# Outreach defaults used when generating cold emails/phone scripts
YOUR_NAME=Max Mustermann
YOUR_TITLE=Inhaber
YOUR_COMPANY=Webseitenservice Musterfirma
YOUR_EMAIL=max@example.com
YOUR_PHONE=+49 170 0000000
YOUR_WEBSITE=https://musterfirma.example
CALENDAR_LINK=https://cal.com/yourname/intro
PROJECT_LINK=https://example.com/project
SHORT_OUTCOME=+45% Anfragen in 30 Tagen
DEFAULT_PRICE=1490€
DEFAULT_PAGES=5
DEFAULT_TIMELINE=14 Tage
SUPPORT_PERIOD=6 Monate
TEMPLATE_LANG=de

# Database (Docker defaults)
DB_HOST=db
DB_PORT=5432
DB_NAME=website_service
DB_USER=postgres
DB_PASSWORD=postgres
# Alternatively provide a full URL (overrides the above)
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/website_service

# Backend API / Frontend
FRONTEND_ORIGIN=http://localhost:3000
# In Vercel, frontend calls /api/backend/* -> proxy route forwards to this internal base
NEXT_PUBLIC_API_BASE=/api/backend
# Point this to your deployed backend function URL if you split projects, e.g. https://your-backend.vercel.app
API_INTERNAL_BASE=http://localhost:8000

# Shared offers directory
# In Docker/local, this can be a mounted volume; in Vercel it will default to /tmp/offer-sheets
OFFERS_DIR=/shared/offer-sheets
OFFER_SHEETS_DIR=/shared/offer-sheets
# Optional: remote DOCX template to use on Vercel if local file not present
DOCX_TEMPLATE_URL=